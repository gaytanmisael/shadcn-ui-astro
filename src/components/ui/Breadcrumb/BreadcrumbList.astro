---
import type { HTMLAttributes } from "astro/types"
type Props = HTMLAttributes<"ol">
const { class: className, ...attrs } = Astro.props as Props
---

<ol
  class:list={[
    "flex",
    "flex-wrap",
    "items-center",
    "gap-1.5",
    "break-words",
    "text-sm",
    "text-muted-foreground",
    "sm:gap-2.5"
  ]}
  {...attrs}>
  <slot />
</ol>
