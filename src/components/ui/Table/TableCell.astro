---
import type { HTMLAttributes } from "astro/types"
type Props = HTMLAttributes<"td">
const { class: className, ...attrs } = Astro.props as Props
---

<td
  class:list={[
    "p-2",
    "align-middle",
    "[&:has([role=checkbox])]:pr-0",
    "[&>[role=checkbox]]:translate-y-[2px]",
    className
  ]}
  {...attrs}><slot /></td
>
