---
import type { HTMLAttributes } from "astro/types"
type Props = HTMLAttributes<"th">
const { class: className, ...attrs } = Astro.props as Props
---

<th
  class:list={[
    "h-10",
    "px-2",
    "text-left",
    "align-middle",
    "font-medium",
    "text-muted-foreground",
    "[&:has([role=checkbox])]:pr-0",
    "[&>[role=checkbox]]:translate-y-[2px]",
    className
  ]}
  {...attrs}><slot /></th
>
